@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

<h2>Blog Kayıtları</h2>

<a class="btn btn-default" href="/Blog/Create/">Yeni Blog Ekle</a>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Resim URL</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Icerik)</td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>
                <td>@item.KategoriId</td>
                <td><a href="/Blog/Edit/@item.BlogId">Düzenle</a> | <a href="/Blog/Delete/@item.BlogId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>

