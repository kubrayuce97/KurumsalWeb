@model KurumsalWeb.Models.Model.Blog

@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                <li class="active">Blog Detay</li>
            </ul>
        </div>
    </div>
</div>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <article>
                    <div class="post-image">
                        <div class="post-heading">
                            <h3><a>@Model.Baslik</a></h3>
                        </div>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                <li><i class="icon-calendar"></i><a href="#">@DateTime.Now</a></li>
                                @*<li><i class="icon-user"></i><a href="#"> Admin</a></li>*@
                                <li><i class="icon-folder-open"></i><a href="#"> @Model.Kategori.KategoriAd</a></li>
                                @*<li><i class="icon-comments"></i><a href="#">4 Comments</a></li>*@
                            </ul>
                            <a href="/Home/BlogDetay/@Model.BlogId" class="pull-right">Continue reading <i class="icon-angle-right"></i></a>
                        </div>
                        <img src="@Model.ResimURL" alt="@Model.Baslik" />
                    </div>
                    <p>@Html.Raw(Model.Icerik)</p>

                </article>

                <div class="row">
                    <div class="col-lg-8">
                        <h3>Yorum Yap</h3>
                        <div>
                            <input type="text" id="adsoyad" placeholder="Adınız Soyadınız" required class="form-control" />
                            <br />
                            <input type="email" id="eposta" placeholder="Mail Adresiniz" required class="form-control" />
                            <br />
                            <textarea typeof="text" id="icerik" class="form-control"></textarea>
                            <br />
                            <button type="button" class="btn btn-success" id="gonder" value="Yorum Yap">Yorum Yap</button>
                        </div>
                    </div>
                </div>

                @*<div id="pagination">
                        <span class="all">Page 1 of 3</span>
                        <span class="current">1</span>
                        <a href="#" class="inactive">2</a>
                        <a href="#" class="inactive">3</a>
                    </div>*@
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Blog Kayıtları</h5>
                        <ul class="recent">
                            @{
                                Html.RenderAction("BlogKayitPartial", "Home");
                            }
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>

